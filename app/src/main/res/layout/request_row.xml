<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/UserCardView"
        android:layout_width="409dp"
        android:layout_height="137dp"
        tools:layout_editor_absoluteX="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="137dp">

            <ImageView
                android:id="@+id/imgRequestProfile"
                android:layout_width="80dp"
                android:layout_height="136dp"
                android:layout_marginEnd="6dp"
                app:layout_constraintEnd_toStartOf="@+id/txtRequestMessage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/profile" />

            <TextView
                android:id="@+id/txtRequestName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="28dp"
                android:text="Ethan Doherty"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@id/imgRequestProfile"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnRequestAccept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="#4CAF50"
                android:text="Accept"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnRequestReject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="#FF0000"
                android:text="Reject"
                android:textColorLink="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnRequestAccept" />

            <TextView
                android:id="@+id/txtRequestMessage"
                android:layout_width="203dp"
                android:layout_height="36dp"
                android:layout_marginEnd="116dp"
                android:layout_marginBottom="23dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgRequestProfile"
                app:layout_constraintTop_toBottomOf="@+id/txtRequestName" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
